:css
  #search{width:95%;text-align:right;}
  #container{margin-top:10px;}
  .tt-dataset-agent{text-align:left;}

-content_for :scripts do
  %script{src: '/javascript/typeahead.bundle.min.js', type: 'text/javascript' }
  %script{src: '/javascript/svg-pan-zoom.min.js', type: 'text/javascript' }
  %script{src: '/javascript/network.js', type: 'text/javascript' }
  :javascript
    $(function() { Network.init(); });

-content_for :title do
  Collector Network

%h1 Network of Collectors

#search
  %div.inputs
    %label{for: "typeahead-agent"}= "Collector"
    %input.typeahead{id: "typeahead-agent", type: :text, name: "q", placeholder: "Terry Wheeler", value: "#{params[:q]}", size: 30}

#container{style: 'width: 100%; height: 500px'}
